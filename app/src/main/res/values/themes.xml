<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Final top level theme -->
    <style name="Theme.BoutiquesWorld.DayNight" parent="Theme.BoutiquesWorld" />

    <style name="Theme.BoutiquesWorld" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorSecondary">@color/pink_800</item>
        <item name="colorSecondaryVariant">@color/pink_100</item>
        <item name="colorTertiary">@color/yellow_700</item>
        <item name="colorSurface">@color/white</item>

        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnPrimary">@color/grey_900</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Typography -->
        <item name="textAppearanceOverline">@style/TextAppearance.BoutiquesWorld.Overline</item>
        <item name="textAppearanceCaption">@style/TextAppearance.BoutiquesWorld.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.BoutiquesWorld.Button</item>
        <item name="textAppearanceBody2">@style/TextAppearance.BoutiquesWorld.Body2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.BoutiquesWorld.Body1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.BoutiquesWorld.Subtitle2</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.BoutiquesWorld.Subtitle1</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.BoutiquesWorld.HeadLine6</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.BoutiquesWorld.HeadLine5</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.BoutiquesWorld.HeadLine4</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.BoutiquesWorld.HeadLine3</item>
        <item name="textAppearanceTab">@style/TextAppearance.Trendition.Tab</item>

        <!-- Shape -->
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.BoutiquesWorld.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.BoutiquesWorld.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearance.BoutiquesWorld.LargeComponent
        </item>

        <item name="badgeStyle">@style/BoutiqueBadge</item>

        <!-- Platform attributes -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Theme.Trendition.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Platform attributes -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

    <style name="Theme.Trendition.Calendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/pink_800</item>
        <item name="colorOnPrimary">?colorOnSecondary</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.BoutiquesWorld.SmallComponent</item>
    </style>
</resources>