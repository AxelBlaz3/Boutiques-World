<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="product"
            type="com.boutiquesworld.model.BaseProduct.Product" />

        <variable
            name="fabric"
            type="com.boutiquesworld.model.BaseProduct.Fabric" />

        <variable
            name="isFabric"
            type="Boolean" />

        <variable
            name="listener"
            type="com.boutiquesworld.ui.product.ProductsAdapter.ProductsAdapterListener" />

        <variable
            name="position"
            type="Integer" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/grid_1"
        android:onClick="@{(view) -> listener.onProductClick(isFabric ? fabric : product, position)}"
        android:transitionName="@{@string/transition_detail(position)}"
        app:cardElevation="@dimen/grid_1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/product_logo"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:scaleType="fitXY"
                app:glideSrc="@{isFabric ? fabric.productThumb : product.productThumb}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/product_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/grid_2"
                android:layout_marginTop="@dimen/grid_1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{isFabric ? fabric.productName : product.productName}"
                android:textAppearance="?textAppearanceSubtitle1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_logo"
                tools:text="Blue Floral Organza" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/grid_2"
                android:layout_marginTop="@dimen/grid_0_5"
                android:layout_marginBottom="@dimen/grid_1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="₹2000 - ₹5000"
                android:textAppearance="?textAppearanceSubtitle2"
                android:textColor="?colorSecondary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_title"
                tools:text="₹ 2000  -  ₹ 5000" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>