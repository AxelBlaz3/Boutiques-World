<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="totalLines"
            type="Integer" />

        <variable
            name="retailer"
            type="com.boutiquesworld.model.Retailer" />

        <variable
            name="showMoreVisibility"
            type="Boolean" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:paddingBottomSystemWindowInsets="@{true}"
        app:paddingTopSystemWindowInsets="@{true}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="144dp"
                android:layout_height="144dp"
                android:layout_marginTop="80dp"
                app:glideCircleCrop="@{true}"
                app:glideSrc="@{retailer.businessLogo}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/likes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_3"
                android:gravity="center"
                android:text="2k"
                android:textAppearance="?textAppearanceHeadline6"
                app:layout_constraintEnd_toEndOf="@+id/likes_text"
                app:layout_constraintStart_toStartOf="@+id/likes_text"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                tools:text="2k" />

            <TextView
                android:id="@+id/visits"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_3"
                android:gravity="center"
                android:text="5k"
                android:textAppearance="?textAppearanceHeadline6"
                app:layout_constraintEnd_toEndOf="@+id/visits_text"
                app:layout_constraintStart_toStartOf="@+id/visits_text"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                tools:text="5k" />

            <TextView
                android:id="@+id/uploads"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_3"
                android:gravity="center"
                android:text="2k"
                android:textAppearance="?textAppearanceHeadline6"
                app:layout_constraintEnd_toEndOf="@+id/uploads_text"
                app:layout_constraintStart_toStartOf="@+id/uploads_text"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                tools:text="2k" />

            <TextView
                android:id="@+id/likes_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/likes"
                android:textAppearance="?textAppearanceSubtitle1"
                app:layout_constraintEnd_toStartOf="@+id/visits_text"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/likes" />

            <TextView
                android:id="@+id/visits_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/visits"
                android:textAppearance="?textAppearanceSubtitle1"
                app:layout_constraintEnd_toStartOf="@+id/uploads_text"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/likes_text"
                app:layout_constraintTop_toBottomOf="@+id/visits" />

            <TextView
                android:id="@+id/uploads_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/uploads"
                android:textAppearance="?textAppearanceSubtitle1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/visits_text"
                app:layout_constraintTop_toBottomOf="@+id/uploads" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_3"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="@{retailer.businessName}"
                android:textAppearance="?textAppearanceHeadline4"
                app:layout_constraintTop_toBottomOf="@+id/likes_text"
                tools:text="Ali Connors" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{retailer.zone}"
                android:textAppearance="?textAppearanceSubtitle1"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                tools:text="Earth" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/grid_3"
                android:layout_marginTop="@dimen/grid_3"
                android:background="?colorControlHighlight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView4" />

            <TextView
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_2"
                android:gravity="center"
                android:maxLines="2"
                android:text="An artist of considerable range, Connors name taken as a placeholder for retailer name. An artist of considerable range, Connors name taken as a placeholder for retailer name."
                android:textAppearance="?textAppearanceBody2"
                app:layout_constraintEnd_toEndOf="@+id/view"
                app:layout_constraintStart_toStartOf="@+id/view"
                app:layout_constraintTop_toBottomOf="@+id/view"
                tools:text="An artist of considerable range, Connors name taken as a placeholder for retailer name." />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/show_more_less_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_more"
                android:textAllCaps="false"
                android:textColor="?colorSecondary"
                android:visibility="@{showMoreVisibility ? View.VISIBLE : View.GONE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/description"
                app:showLessOrMore="@{description}"
                app:totalLines="@{totalLines}" />

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/grid_3"
                android:layout_marginTop="@dimen/grid_1"
                android:background="?colorControlHighlight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/show_more_less_button" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/grid_2"
                android:layout_marginTop="@dimen/grid_2"
                android:text="@string/seller_details"
                android:textAppearance="?textAppearanceHeadline6"
                app:layout_constraintTop_toBottomOf="@+id/view2"
                tools:layout_editor_absoluteX="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/about_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_1"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingBottom="96dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/textView10"
                tools:listitem="@layout/about_item" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>