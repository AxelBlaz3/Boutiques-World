<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/action_layout_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/action_item_basket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_round_shopping_cart" />

    <TextView
        android:id="@+id/action_item_basket_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bag_badge_drawable"
        android:gravity="center"
        android:textColor="?colorOnSecondary"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/action_item_basket"
        app:layout_constraintEnd_toEndOf="@+id/action_item_basket"
        app:layout_constraintStart_toEndOf="@+id/action_item_basket"
        app:layout_constraintTop_toTopOf="@+id/action_item_basket"
        tools:text="4" />
</androidx.constraintlayout.widget.ConstraintLayout>